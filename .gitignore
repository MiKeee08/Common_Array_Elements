import java.util.Scanner;

class WordCount
{
	public static void main(String args[])
	{	
		int count = 0;
		Scanner scr = new Scanner(System.in);
		System.out.print("Enter a string: ");
		String str = scr.nextLine();
		
		for(int i = 0; i < str.length(); i++)
		{
			if(str.charAt(i) == ' ')
			count = count + 1;
		}
		System.out.println(count + 1);	
	}
}
